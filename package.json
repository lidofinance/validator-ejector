{
  "name": "validator-ejector",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@chainsafe/bls": "7.1.1",
    "@chainsafe/bls-keystore": "3.0.0",
    "@chainsafe/blst": "0.2.6",
    "@chainsafe/ssz": "0.9.2",
    "@lodestar/params": "1.2.2",
    "@lodestar/state-transition": "1.2.2",
    "@lodestar/types": "1.2.2",
    "@lodestar/utils": "1.2.2",
    "dotenv": "16.0.3",
    "ethers": "5.7.2",
    "lido-nanolib": "1.3.2",
    "node-fetch": "3.3.0",
    "prom-client": "14.1.0",
    "typescript": "4.9.3"
  },
  "type": "module",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose",
    "lint": "eslint --ext ts .",
    "start": "node dist/index.js",
    "build": "tsc --build",
    "typechain": "typechain --target=ethers-v5 --out-dir ./lib/abi ValidatorExitBus.json",
    "encrypt": "ts-node encryptor/encrypt.ts"
  },
  "devDependencies": {
    "@types/jest": "29.2.4",
    "@types/node": "18.11.11",
    "@typescript-eslint/eslint-plugin": "5.45.1",
    "@typescript-eslint/parser": "5.45.1",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.3.1",
    "prettier": "2.8.0",
    "ts-jest": "29.0.3",
    "ts-jest-resolver": "2.0.0",
    "ts-node": "10.9.1"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "setupFiles": [
      "dotenv/config"
    ],
    "testEnvironment": "node"
  }
}
